programa
{
	
	funcao inicio()
	{
		real a,b,c,d,aux

		escreva("Forneça os valores de A, B, C e D:\n")
		leia(a,b,c,d)

		se(d>a)
		{
			aux = d
			d = a
			a = aux
		}
		se(c>a)
		{
			aux = c
			c = a
			a = aux
		}
		se(b>a)
		{
			aux = b
			b = a
			a = aux
		}
		se(d>b)
		{
			aux = b
			b = d
			d = aux
		}
		se(c>b)
		{
			aux = b
			b = c
			c = aux
		}
		se(d>c)
		{
			aux = c
			c = d
			d = aux
		}
		escreva("Exiba os números em ordem decrescente:\n",a," ,",b,", ",c,", ",d)
	}
}
